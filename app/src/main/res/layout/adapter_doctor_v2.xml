<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardDoctor"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    app:cardCornerRadius="8dp"
    android:elevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_3sdp">

        <TextView
            android:id="@+id/textNamaDokter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nama Dokter"
            android:textColor="#575757"
            android:fontFamily="@font/quicksand_semi_bold"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/cardImgDoctor"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_3sdp"/>

        <TextView
            android:id="@+id/textTempatPraktek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tempat Praktek"
            android:fontFamily="@font/quicksand_semi_bold"
            app:layout_constraintTop_toBottomOf="@+id/textNamaDokter"
            app:layout_constraintLeft_toLeftOf="@id/textNamaDokter"
            app:layout_constraintRight_toRightOf="@id/textNamaDokter"
            android:textSize="@dimen/_11ssp"/>

        <TextView
            android:id="@+id/titleBiaya"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#575757"
            android:fontFamily="@font/quicksand_semi_bold"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintTop_toBottomOf="@+id/textTempatPraktek"
            app:layout_constraintLeft_toLeftOf="@id/textNamaDokter"
            android:text="Biaya"/>

        <TextView
            android:id="@+id/textBiaya"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rp 12345"
            android:fontFamily="@font/quicksand_semi_bold"
            app:layout_constraintTop_toBottomOf="@+id/titleBiaya"
            app:layout_constraintLeft_toLeftOf="@id/textNamaDokter"
            app:layout_constraintRight_toRightOf="@id/textNamaDokter"
            android:textSize="@dimen/_11ssp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBuatJanji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buat Janji"
            app:layout_constraintTop_toBottomOf="@+id/textBiaya"
            app:layout_constraintLeft_toLeftOf="@id/textNamaDokter"
            app:layout_constraintBottom_toBottomOf="@id/cardImgDoctor"
            android:layout_marginTop="@dimen/_10sdp"
            app:backgroundTint="#575757"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/quicksand_bold"
            android:textAllCaps="false"
            android:gravity="center"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardImgDoctor"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/textNamaDokter"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_5sdp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:elevation="5dp">

            <ImageView
                android:id="@+id/imgDoctor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/doctor_placeholder"
                android:scaleType="fitXY"
                />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>