<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.doctor.DaftarDokterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_back_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:clickable="true"/>

        <TextView
            android:id="@+id/textCariDokter"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Profil Saya"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/imgBack"
            app:layout_constraintBottom_toBottomOf="@id/imgBack"
            app:layout_constraintLeft_toRightOf="@+id/imgBack"
            android:textSize="@dimen/_23ssp"
            android:gravity="center"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/imgBack"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/shape_top_rounded"
            android:layout_marginTop="@dimen/_20sdp">

            <LinearLayout
                android:id="@+id/linearFormNutrition"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:visibility="visible">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgUsers"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:src="@drawable/placeholder_profile"
                            app:civ_border_width="0.2dp"
                            app:civ_border_color="#FF000000"
                            tools:ignore="MissingConstraints"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:padding="@dimen/_2sdp"
                            android:layout_gravity="center"/>


                        <TextView
                            android:id="@+id/textFullname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Nama"
                            android:fontFamily="@font/quicksand_bold"
                            android:textColor="#4B6855"
                            android:textSize="@dimen/_20ssp"
                            />


                        <LinearLayout
                            android:id="@+id/linearEditProfil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Edit Profil"
                                android:fontFamily="@font/quicksand_medium"
                                android:textColor="#4B6855"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/_12ssp"/>

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:src="@drawable/ic_left_24px"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="Akunku"
                            android:textColor="#4B6855"
                            android:textSize="@dimen/_14ssp"
                            android:layout_marginTop="@dimen/_8sdp"/>

                        <LinearLayout
                            android:id="@+id/linearMetodePembayaran"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/_2sdp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Metode Pembayaran"
                                    android:fontFamily="@font/quicksand_medium"
                                    android:textColor="#4B6855"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/_12ssp"/>

                                <ImageView
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp"
                                    android:src="@drawable/ic_left_24px"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_gravity="center_vertical"/>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/line_custom"
                                android:layout_marginTop="@dimen/_3sdp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearPesananSaya"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/_2sdp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Pesanan Saya"
                                    android:fontFamily="@font/quicksand_medium"
                                    android:textColor="#4B6855"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/_12ssp"/>

                                <ImageView
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp"
                                    android:src="@drawable/ic_left_24px"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_gravity="center_vertical"/>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/line_custom"
                                android:layout_marginTop="@dimen/_3sdp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearKontakDarurat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/_2sdp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Kontak Darurat"
                                    android:fontFamily="@font/quicksand_medium"
                                    android:textColor="#4B6855"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/_12ssp"/>

                                <ImageView
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp"
                                    android:src="@drawable/ic_left_24px"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_gravity="center_vertical"/>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/line_custom"
                                android:layout_marginTop="@dimen/_3sdp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearNotifikasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/_2sdp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Notifikasi"
                                    android:fontFamily="@font/quicksand_medium"
                                    android:textColor="#4B6855"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/_12ssp"/>

                                <ImageView
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp"
                                    android:src="@drawable/ic_left_24px"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_gravity="center_vertical"/>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/line_custom"
                                android:layout_marginTop="@dimen/_3sdp"/>

                        </LinearLayout>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="Umum"
                            android:textColor="#4B6855"
                            android:textSize="@dimen/_14ssp"
                            android:layout_marginTop="@dimen/_18sdp"/>

                        <LinearLayout
                            android:id="@+id/linearPusatBantuan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/_2sdp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Pusat Bantuan"
                                    android:fontFamily="@font/quicksand_medium"
                                    android:textColor="#4B6855"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/_12ssp"/>

                                <ImageView
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp"
                                    android:src="@drawable/ic_left_24px"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_gravity="center_vertical"/>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/line_custom"
                                android:layout_marginTop="@dimen/_3sdp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearFeedBack"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/_2sdp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Kasih Masukan"
                                    android:fontFamily="@font/quicksand_medium"
                                    android:textColor="#4B6855"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/_12ssp"/>

                                <ImageView
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp"
                                    android:src="@drawable/ic_left_24px"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_gravity="center_vertical"/>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/line_custom"
                                android:layout_marginTop="@dimen/_3sdp"/>

                        </LinearLayout>


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnLogout"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_35sdp"
                            android:text="Logout"
                            android:background="@drawable/rectangle_login_button"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_50sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            app:backgroundTint="#575757"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:fontFamily="@font/quicksand_bold"/>


                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>