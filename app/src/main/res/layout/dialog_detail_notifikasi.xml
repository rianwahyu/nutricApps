<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_5sdp">

    <TextView
        android:id="@+id/textJudulNotifikasi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nama Notifikasi"
        android:textColor="#575757"
        android:fontFamily="@font/quicksand_semi_bold"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_3sdp"/>

    <TextView
        android:id="@+id/textContentNotifikasi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_semi_bold"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintTop_toBottomOf="@+id/textJudulNotifikasi"
        app:layout_constraintLeft_toLeftOf="@id/textJudulNotifikasi"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/_2sdp"
        android:text="Konten Notifikasi"
        android:maxLines="2"/>

    <TextView
        android:id="@+id/textTannggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal"
        android:fontFamily="@font/quicksand_semi_bold"
        app:layout_constraintTop_toBottomOf="@+id/textContentNotifikasi"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/_11ssp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnHapusNotifikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#DF7861"
        app:layout_constraintTop_toBottomOf="@+id/textTannggal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Hapus"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_2sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>