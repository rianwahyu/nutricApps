<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardHistoryFood"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    app:cardCornerRadius="8dp"
    android:elevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_3sdp">

        <View
            android:id="@+id/textFoodName"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_8sdp"
            android:background="@color/placeholder"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_3sdp"/>


        <View
            android:id="@+id/textKalori"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_8sdp"
            android:background="@color/placeholder"
            app:layout_constraintTop_toTopOf="@id/textFoodName"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="@dimen/_12ssp"/>

        <View
            android:id="@+id/textJumlahPorsi"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_8sdp"
            android:background="@color/placeholder"
            app:layout_constraintTop_toBottomOf="@+id/textFoodName"
            app:layout_constraintLeft_toLeftOf="@id/textFoodName"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_2sdp"
            android:text="Jumlah Porsi"
            android:layout_marginTop="@dimen/_5sdp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>