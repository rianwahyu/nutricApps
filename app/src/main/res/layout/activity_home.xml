<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/coordinator"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nutric"
                    tools:ignore="MissingConstraints"
                    android:fontFamily="@font/quicksand_bold"
                    android:textColor="@color/primaryDark"
                    android:textSize="@dimen/_18ssp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:background="@color/primary">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_240sdp"
                android:background="@drawable/shape_bottom_home" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardCalories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:elevation="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FAF8F8">

                    <TextView
                        android:id="@+id/textKaloriDibutuhkan"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="1500\nkkal"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="#4B6855"
                        android:fontFamily="@font/quicksand_bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:background="@drawable/elipse_calories_home"
                        android:gravity="center"
                        android:elevation="10dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_13sdp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/textKaloriDibutuhkan"
                        app:layout_constraintLeft_toLeftOf="@+id/textKaloriDibutuhkan"
                        app:layout_constraintRight_toRightOf="@+id/textKaloriDibutuhkan"
                        android:text="Kalori\nDibutuhkan"
                        android:textAlignment="center"
                        android:fontFamily="@font/quicksand_medium"
                        android:textSize="@dimen/_8ssp"
                        android:textColor="#4B6855"/>


                    <TextView
                        android:id="@+id/textKaloriDiKeluarkan"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="0\nkkal"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="#4B6855"
                        android:fontFamily="@font/quicksand_bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="@drawable/elipse_calories_home"
                        android:gravity="center"
                        android:elevation="10dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_13sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/textKaloriDiKeluarkan"
                        app:layout_constraintLeft_toLeftOf="@+id/textKaloriDiKeluarkan"
                        app:layout_constraintRight_toRightOf="@+id/textKaloriDiKeluarkan"
                        android:text="Kalori\nDikeluarkan"
                        android:textAlignment="center"
                        android:fontFamily="@font/quicksand_medium"
                        android:textSize="@dimen/_8ssp"
                        android:textColor="#4B6855"/>

                    <TextView
                        android:id="@+id/textSisaKalori"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/elipse_calories_home_center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="@dimen/_35sdp"
                        android:text="1500\nkkal"
                        android:textColor="#4B6855"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="@dimen/_20ssp"
                        android:textAlignment="center"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/textSisaKalori"
                        app:layout_constraintLeft_toLeftOf="@+id/textSisaKalori"
                        app:layout_constraintRight_toRightOf="@+id/textSisaKalori"
                        android:text="Kalori Tersisa"
                        android:textAlignment="center"
                        android:fontFamily="@font/quicksand_medium"
                        android:textStyle="bold"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="#4B6855"
                        android:layout_marginTop="@dimen/_4sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="@dimen/_8sdp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/cardCalories"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_4sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/titleDaftarMakanan"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/cardCalories"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:text="Daftar Makanan"
                            android:textAlignment="textStart"
                            android:fontFamily="@font/quicksand_semi_bold"
                            android:textStyle="bold"
                            android:textSize="@dimen/_11ssp"
                            android:textColor="#4B6855"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_4sdp"
                            />

                        <TextView
                            android:id="@+id/textLihatSemuaMakanan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/cardCalories"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:text="Lihat Semua"
                            android:fontFamily="@font/quicksand_bold"
                            android:textStyle="bold"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="#4B6855"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_4sdp"
                            android:clickable="true"/>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcMakanan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/titleDaftarMakanan"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_2sdp"/>

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmerMakanan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/_2sdp">

                            <include
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_3sdp"
                                layout="@layout/placeholder_adapter_food"/>
                            <include
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_3sdp"
                                layout="@layout/placeholder_adapter_food"/>

                            <include
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_3sdp"
                                layout="@layout/placeholder_adapter_food"/>

                        </LinearLayout>

                    </com.facebook.shimmer.ShimmerFrameLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/titleDaftarDokter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/cardFood"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Daftar Dokter"
                android:textAlignment="center"
                android:fontFamily="@font/quicksand_semi_bold"
                android:textSize="@dimen/_10ssp"
                android:textColor="#4B6855"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_10sdp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcDokter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/titleDaftarDokter"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"/>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerDokter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/titleDaftarDokter"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"/>


            <TextView
                android:id="@+id/titleDaftarBlog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/rcDokter"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Daftar Konten"
                android:textAlignment="center"
                android:fontFamily="@font/quicksand_semi_bold"
                android:textSize="@dimen/_10ssp"
                android:textColor="#4B6855"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_10sdp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcBlog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/titleDaftarBlog"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"/>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerBlog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/titleDaftarBlog"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingTop="@dimen/_2sdp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_checklist"
                    android:background="@drawable/circle_menu_home"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4B6855"
                    android:text="My Diary"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="@dimen/_8ssp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_healty"
                    android:background="@drawable/circle_menu_home"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4B6855"
                    android:text="Food Market"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="@dimen/_8ssp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_nutrition"
                    android:background="@drawable/circle_menu_home"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4B6855"
                    android:text="My Nutrition"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="@dimen/_8ssp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_medical"
                    android:background="@drawable/circle_menu_home"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4B6855"
                    android:text="My Doctor"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="@dimen/_8ssp"
                    android:layout_gravity="center"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_user"
                    android:background="@drawable/circle_menu_home"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4B6855"
                    android:text="My Profile"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="@dimen/_8ssp"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>