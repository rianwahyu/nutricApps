<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardFood"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    app:cardCornerRadius="8dp"
    android:elevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_3sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardImgFood"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:elevation="5dp"
            android:layout_marginTop="@dimen/_5sdp">

            <View
                android:id="@+id/imgFood"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/placeholder"
                android:scaleType="fitXY"
                />

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/textNamaMakanan"
            android:layout_width="0dp"
            android:layout_height="@dimen/_10sdp"
            android:background="@color/placeholder"
            android:textColor="#575757"
            android:fontFamily="@font/quicksand_semi_bold"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintTop_toTopOf="@id/cardImgFood"
            app:layout_constraintLeft_toRightOf="@+id/cardImgFood"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_5sdp"/>


        <View
            android:id="@+id/textKeterangan"
            android:layout_width="0dp"
            android:layout_height="@dimen/_8sdp"
            android:text="Keterangan"
            android:background="@color/placeholder"
            android:fontFamily="@font/quicksand_semi_bold"
            app:layout_constraintTop_toBottomOf="@+id/textNamaMakanan"
            app:layout_constraintLeft_toLeftOf="@id/textNamaMakanan"
            app:layout_constraintRight_toRightOf="@id/textNamaMakanan"
            android:textSize="@dimen/_11ssp"
            android:layout_marginTop="@dimen/_8sdp"/>

        <View
            android:id="@+id/textNutrisi"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_8sdp"
            android:background="@color/placeholder"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintTop_toTopOf="@+id/btnBeli"
            app:layout_constraintLeft_toLeftOf="@id/textNamaMakanan" />

        <View
            android:id="@+id/textKalori"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_8sdp"
            android:background="@color/placeholder"
            android:fontFamily="@font/quicksand_semi_bold"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintTop_toBottomOf="@+id/textNutrisi"
            app:layout_constraintLeft_toLeftOf="@id/textNamaMakanan"
            android:layout_marginTop="@dimen/_6sdp"/>


        <View
            android:id="@+id/btnBeli"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@color/placeholder"
            android:text="Beli"
            app:layout_constraintTop_toBottomOf="@+id/cardImgFood"
            app:layout_constraintLeft_toLeftOf="@id/cardImgFood"
            app:layout_constraintRight_toRightOf="@id/cardImgFood"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/_5sdp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>